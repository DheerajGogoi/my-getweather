    <title>Get Weather</title>

    <!-- add icon link -->
    <link rel = "icon" href = "../icon/get-weather-logo.png" type = "image/x-icon">

</head>
<body>

    <nav class="navbar navbar-dark bg-dark bg-color navbar-custom bg-transparent">
        <div class="container navbar-collapse">
            <a class="navbar-brand"><span class="badge badge-secondary brand-badge">Get Weather</span></a>
            <div style="text-align:center" class="today"><%= today %></div>
            <form class="form-inline" method="post" action='/' autocomplete="off">
                <input class="form-control mr-sm-2 enter-city" name="city" type="text" placeholder="Enter City Name" aria-label="Search" required>
                <button class="btn btn-outline-warning my-2 my-sm-0 border-0" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </nav>

    <!-- OTHER NAV START -->
    <div class="other-nav">
        <div class="my-logo" style="margin-top: 5%;"><span class="badge badge-secondary brand-badge">Get Weather</span></div>
        <div style="text-align:center; padding: 5%;" class="my-date today"><%= today %></div>
        <div class="my-search mx-auto">
            <form class="form-inline" method="post" action='/' autocomplete="off">
            <input class="form-control mr-sm-2 enter-city" name="city" type="text" placeholder="Enter City Name" aria-label="Search" required>
            <button class="btn btn-outline-warning my-2 my-sm-0 border-0" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </div>
    <!-- OTHER NAV END -->

    <section class="content-section container">
        
        <div class="error">
            <div class="error-text">
                Oops!üòØ It seems you've entered some wrong data or there is problem with the server. Go back and try again.
            </div>
        </div>

        <div class="about">
